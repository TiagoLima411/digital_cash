<div class="row">
  <div class="col s8 m8">
    <h4 class="hydra-title--page">
      Products Cadastrados
    </h4>
  </div>
  <div class="col s4 m4">
    <%= form_tag products_path, :method => "get" do %>
      <input id="search_term" name="search_term" type="search" 
      placeholder="Pesquisar" class="hydra-input--search" value="<%= !@search.nil? ? @search : '' %>" required>
    <% end %>
  </div>
</div>

<div class="fixed-action-btn vertical">
  <a class="btn-floating btn-large orange">
    <i class="large material-icons">apps</i>
  </a>
  <ul>
    <li>
      <%= link_to new_product_path, class: "btn-floating red" do %>
        <i class="material-icons">add</i>
      <% end %>
    </li>
  </ul>
</div>

<div class="row">
  <div class="col s12 m12">
    <div class="card-panel">
      <div class="card-content">
        <table class="striped">
          <thead>
            <tr>
                            <th>
                Category
              </th>
                            <th>
                Invoice
              </th>
                            <th>
                Name
              </th>
                            <th>
                Bar code
              </th>
                            <th>
                Purchase price
              </th>
                            <th>
                Sale price
              </th>
                            <th>
                Spread
              </th>
                            <th>
                Spread fee
              </th>
                            <th style="width: 110px">#</th>
            </tr>
          </thead>
          <tbody>
            <% @products.each do |
              product | %>
                <tr>
                                      <td>
                      <%= product.
                        Category%>
                    </td>
                                        <td>
                      <%= product.
                        Invoice%>
                    </td>
                                        <td>
                      <%= product.
                        name%>
                    </td>
                                        <td>
                      <%= product.
                        bar_code%>
                    </td>
                                        <td>
                      <%= product.
                        purchase_price%>
                    </td>
                                        <td>
                      <%= product.
                        sale_price%>
                    </td>
                                        <td>
                      <%= product.
                        spread%>
                    </td>
                                        <td>
                      <%= product.
                        spread_fee%>
                    </td>
                                        <td>
                      <a class='dropdown-button btn' href='#' data-activates='ddoptions-<%= product.id %>' data-constrainWidth="false">Opções</a>
                      <ul id='ddoptions-<%= product.id %>' class='dropdown-content large'>
                        <li>
                          <%= link_to edit_product_path(product) do %>
                            <i class="material-icons">edit</i>Editar
                          <% end %>
                        </li>
                        <li>
                          <%= link_to product, method: :delete, data: { confirm: 'Você tem certeza?' } do %>
                            <i class="material-icons">delete</i>Remover
                          <% end %>
                        </li>
                      </ul>
                    </td>
                </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>